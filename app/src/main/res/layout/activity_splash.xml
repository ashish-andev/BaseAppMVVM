<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.dashboard.DashboardActivity">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="com.thevalet.app.ui.splash.SplashViewModel"/>
    </data>


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/rlHeader"
                android:background="@color/gray51"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="@dimen/_40sdp">
            <TextView
                    style="@style/TextStyle.Medium"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="@string/configuration"/>
        </RelativeLayout>


        <TextView android:id="@+id/tvHeader"
                  style="@style/TextStyle.Small"
                  android:text="@string/select_location_where_you_want_to_setup_this_application"
                  android:layout_marginTop="@dimen/_15sdp"
                  android:textSize="@dimen/_8sdp"
                  app:layout_constraintTop_toBottomOf="@+id/rlHeader"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout android:layout_width="@dimen/_200sdp"
                      android:layout_height="0dp"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeader"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginBottom="@dimen/_12sdp"
                      android:layout_marginTop="@dimen/_12sdp"
                      app:layout_constraintBottom_toTopOf="@+id/btn_cnfrm">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:background="@drawable/gray_border_bg"
                    android:layout_height="wrap_content"
                    app:locationAdapter="@{viewModel.locationOptions}"/>
        </LinearLayout>

        <Button style="@style/Button.Primary"
                android:id="@+id/btn_cnfrm"
                android:layout_width="@dimen/_200sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/confirm_location"
                android:textAllCaps="true"
                android:onClick="@{() -> viewModel.submitLocation()}"
                android:layout_marginBottom="@dimen/_30sdp"/>


        <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@+id/rlHeader"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</layout>
