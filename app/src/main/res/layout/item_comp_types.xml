<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="compTypesOption"
                type="com.thevalet.app.data.model.CompTypesOption"/>
    </data>


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/container"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivChecked"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/types_option_checkbox"/>
        <TextView
                android:id="@+id/tvName"
                style="@style/TextStyle.Small"
                android:textSize="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_9sdp"
                app:layout_constraintLeft_toRightOf="@+id/ivChecked"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{compTypesOption.name}"
                tools:text="Hello world"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              app:layout_constraintTop_toBottomOf="@+id/tvName"
              android:background="@color/div"
              android:layout_marginTop="@dimen/_9sdp"/>


    </android.support.constraint.ConstraintLayout>
</layout>